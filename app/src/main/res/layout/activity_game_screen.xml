<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".GameScreenActivity">

    <TextView
        android:id="@+id/tvActivityGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:text="Tic Tac Toe"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTicTacToePlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActivityGameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GridBox"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/red"
        android:drawablePadding="10dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:text="Reset The Game"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/delete_24" />

    <GridLayout
        android:id="@+id/GridBox"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tvTicTacToePlayerName"
        android:layout_marginVertical="50dp"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:padding="10dp"
        android:rowCount="3"
        android:useDefaultMargins="true"

        >

        <ImageButton
            android:id="@+id/imgBtn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <ImageButton
            android:id="@+id/imgBtn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            />


        <ImageButton
            android:id="@+id/imgBtn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imgBtn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />


    </GridLayout>

</RelativeLayout>